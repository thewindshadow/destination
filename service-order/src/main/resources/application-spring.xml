<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/aop
    http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">


    <context:component-scan base-package="com.hzq.order"/>
    <context:component-scan base-package="com.hzq.base.redis"/>


    <bean id="propertyConfigurer"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:db.properties</value>
                <value>classpath:dubbo-zk.properties</value>
                <value>classpath:redis.properties</value>
            </list>
        </property>
    </bean>

    <import resource="classpath:application-db-order.xml"/>
    <import resource="classpath:application-tcc.xml"/>

    <aop:aspectj-autoproxy proxy-target-class="true" expose-proxy="true"/>

    <dubbo:registry address="${dubbo.registry.address}"/>
    <dubbo:protocol port="${dubbo.protocol.port.order}"/>


    <dubbo:service retries="0" interface="com.hzq.order.service.OrderService" ref="orderService"
                   version="${dubbo.service.order.OrderService.version}"/>

    <dubbo:reference interface="com.hzq.user.service.MerchantInfoService" id="merchantInfoService"
                     version="${dubbo.service.user.merchantInfoService.version}"/>
    <dubbo:reference interface="com.hzq.user.service.ProductService" id="productService"
                     version="${dubbo.service.user.productService.version}"/>
    <dubbo:reference interface="com.hzq.message.service.MessageService" id="messageService"
                     version="${dubbo.service.message.MessageService.version}">
        <dubbo:method name="confirmAndSendMessage" async="true" return="false"/>
    </dubbo:reference>
    <dubbo:reference interface="com.hzq.account.service.AccountService" id="accountService"
                     version="${dubbo.service.account.AccountService.version}"/>
</beans>